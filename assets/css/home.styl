@import '_settings'
@import '_animations'
@import 'jeet'
@import 'work'
@import 'testimonial'


html, body, .home-page
  height 93%

hero_img = url('../img/home/chameleon.png')

// backgrounds / colors for navigation boxes
gallery_bg = url('../img/home/gallery-bg.jpg')
gallery_color = rgba(0,0,0,0.7)

words_bg = #FFF
words_color = rgba(0,0,0,0.7)

about_bg = #484343
about_color = #50E3C2

news_bg = #000
news_color = #50E3C2

html, body, .home-page
  height: 100%

.home-page
  margin-top: 0
  
  .hero
    background-image: hero_img
    background-size: cover
    background-position: center right
    position: relative
    height: 80%
    
    .hero-content
      color: #FFF
      text-align: center
      width: 75%
      h1
        text-transform: uppercase
        font-family: raleway
        font-weight: 200
        font-size: 3em
    
      +above(451px)
        align(both)
      +below(450px)
        width: 60%
        padding: 0 10px
        box-sizing: border-box
        align(vertical)
        h1
          font-size: 2em
  
    .arrow
      absolute: bottom 30px left 50%
      margin-left: -21px
      a
        bounce(2s, true, linear)
        background-color: rgba(255, 255, 255, 0.1)
        border-radius: 25px
        color: #FFF
        font-size: 1.25em
        display: block
        padding: 8px 18px

.home-page2
  width 100%
  float left
  display block
  margin-right 1.07451%
  width 92.22504%
  margin-left 3.88748%
  -webkit-transition all 300ms
  -moz-transition all 300ms
  transition all 300ms
  padding-top 0px

h1
  .accent
    color accent
    font-weight 700

.summary
  width 100%
  float left
  background-image: url('../img/home/sycamore.png');
  background-size: 100% 
  background-repeat: no-repeat;
  background-position: bottom right
  margin-bottom 70px

  
  .summary-big
    display block
    float left
    margin-left 5.77496%
    width 50.563%
    &last-child
      margin-right 0

    h1
      margin-top 3em
      font-size about_heading
      position relative
      text-transform uppercase
    h5
      color #937D57
      padding-bottom 10px
  .summary-box
    display block
    float left
    margin-left 42.7623%
    margin-right 1.07451%
    margin-top -90px
    padding 60px 55px 60px 50px 
    p
      margin-bottom 20px
      font-size about_font
      line-height 44px
      a
        color about_color
        padding 10px 10px 5px 0
        font-size 18px
        line-height 20px
        text-decoration none
        border-bottom 4px solid about_color
        -webkit-transition all 200ms cubic-bezier(0.19, 1, 0.22, 1)
        -moz-transition all 200ms cubic-bezier(0.19, 1, 0.22, 1)
        transition all 200ms cubic-bezier(0.19, 1, 0.22, 1)
        &:hover
          padding-right 40px
    .summary-box-link
      float left
      display block
      margin-right 1.07451%
      width 57.23771%
      padding-top 20px
      &:last-child
        margin-right 0
      a
        color about_color
        padding 10px 10px 5px 0
        text-decoration none
        border-bottom 4px solid about_color

+between(768px, 985px)
  .summary
    
    .summary-big
      width 69.563%

    .summary-box
      margin-left 25.762%

+below(767px)
  .summary
    background-image: url('../img/home/sycamore.png');
    background-size: 100% 
    background-repeat: no-repeat;
    background-position: center right
    .summary-big
      width 85.563%

    .summary-box
      margin-left 14.762%

+below(640px)
  .summary
    .summary-big
      width 80.563%
      h1
        font-size 3em

    .summary-box
      margin-left 14.762%
      font-size 16px

+below(479px)
  .summary
    margin-bottom 30px
    .summary-big
      width 100%
      margin-left 0px
      h1
        font-size 2em

    .summary-box
      margin-left 0%
      margin-top -42px
      padding 30px 25px 30px 25px
      p
        font-size 14px


.home-recent-news
  width 100%
  float left
  margin-bottom 0px 
  
  h2
    font-size heading_main
    text-align center
    margin 40px 0
    color black
    h2:hover
      color mid-grey
  .container
    display: block
    float left
    margin-left 3.88748%
    margin-right 1.07451%
    padding-top 0
    width 92.225%
    
  article
    border-top 1px solid home-grey
    color #fff
    display block
    overflow hidden
    padding 30px 0
    position relative
    text-decoration none
    text-align center
         
    .date
      color mid-grey
    h4
      color dark-grey
      font-size heading_sub
      margin-top 12px
      margin-bottom 12px
      a 
        color dark-grey
      a:hover
        color mid-grey
        
// Button
    
  .button
    width 100%
    float left
    margin 30px 0
    text-align center
    a
      border 1px solid recent_btn
      color dark-grey
      display inline-block
      float none
      font-size 1rem
      letter-spacing 0px
      padding 0.8em 2.5em
      text-decoration none
      text-transform uppercase
      overflow hidden
      position relative
      -webkit-transition all 0.3s ease-in-out
      -ms-transition all 0.3s ease-in-out
      transition all 0.3s ease-in-out
      &:hover
        background dark-grey
        color #fff
    a:after
      background recent_btn none repeat 
      content ""
      display block
      height 100%
      left 0
      position absolute
      top 100%
      width 100%
      z-index -1
      -webkit-transition all 0.3s ease-in-out
      -ms-transition all 0.3s ease-in-out
      transition all 0.3s ease-in-out
    a:hover:after
        top 0px

+below(480px)
  .home-recent-news
    width 100%
    h2
      margin 25px 0
      font-size 2em
    h4
      font-size: 1rem;
    .date
      font-size 14px
    .button
      a
        padding 0.5em 1.5em



