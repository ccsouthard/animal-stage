@import '_settings'


.work-grid-post
  width 100%
  float left
  margin-bottom 70px
  h2
    font-size heading_main
    margin 0 0 40px
    text-align center
  ul
    margin 0 0 0px
    padding 0px
    width 100%
    float left
    li
      width 48%
      padding 10px
      float left
      list-style none
      margin-bottom 40px
      h2
        line-height 23px
        text-overflow ellipsis
        white-space nowrap
        width 100%
        font-size heading_main
        overflow hidden
        line-height 40px
        text-align left
      h6
        font-size 16px
        margin 0px
        color gold-color-light
      img
        max-width 100%
        margin-bottom 10px
        border 1px solid #ddd
      a
        color #2a2a2a
        font-size 1.9rem
    
  .button
    width 100%
    float left
    margin 30px 0
    text-align center
    a
      border 1px solid recent_btn
      color dark-grey
      display inline-block
      float none
      font-size 1rem
      letter-spacing 0px
      padding 0.8em 2.5em
      text-decoration none
      text-transform uppercase
      overflow hidden
      position relative
      -webkit-transition all 0.3s ease-in-out
      -ms-transition all 0.3s ease-in-out
      transition all 0.3s ease-in-out
      &:hover
        background dark-grey
        color #fff
    a:after
      background recent_btn none repeat 
      content ""
      display block
      height 100%
      left 0
      position absolute
      top 100%
      width 100%
      z-index -1
      -webkit-transition all 0.3s ease-in-out
      -ms-transition all 0.3s ease-in-out
      transition all 0.3s ease-in-out
    a:hover:after
        top 0px

+below(639px)
  .work-grid-post
    margin-bottom 20px
    ul
      li
        width 100%
        padding 10px 0
        &:last-child
          margin-bottom  0px

+below(480px)
  .work-grid-post
    width 100%
    h2
      font-size 2em
      margin-bottom 25px
    h5
      margin 0px

    .button
        a
          padding 0.5em 1.5em