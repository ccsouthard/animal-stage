extends layout

block head
  title News

block css
  link(href='css/home.css', rel='stylesheet')
  link(href='css/slider.css', rel='stylesheet')
  link(href='css/animate.css', rel='stylesheet')
  
mixin display-news(exhibit, date)
  article.exhibit-item
    .content
      header
        span.date
          = monthNames[date.getMonth()] + ' '
          = date.getDate() + ', '
          = date.getFullYear()
        h4.title
          a(href='.'+exhibit._url)
            = exhibit.title

block content 

  section.home-page2
    
  section.home-recent-news.page
    .container
      h2.wow.fadeIn Recent News
      - var nc = 0
      - var monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]

      for n in site.news
        if nc < 10
          - var date = new Date(n.date)
          
          +display-news(n, date)
          - nc++

block js
  script(src='js/home.js')
  script(src='js/slider.js')  